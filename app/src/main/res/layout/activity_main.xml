<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <!-- 轮播图区域 - 覆盖顶部栏 -->
    <FrameLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/bg_banner_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 使用main_frame1.png作为轮播图背景 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_frame1"
            android:scaleType="centerCrop"
            android:alpha="0.9" />
        
        <!-- 添加底部渐变蒙层，实现虚化效果 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/banner_gradient_mask" />
    </FrameLayout>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toBottomOf="@id/banner_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 图片美化按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_image_edit"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient_left"
            android:text="图片美化"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:icon="@drawable/edit"
            app:iconGravity="textTop"
            app:iconTint="@color/white"
            app:iconSize="40dp"
            android:layout_marginEnd="8dp"
            android:gravity="center" />

        <!-- 相机按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_camera"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gradient_right"
            android:text="相机"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:icon="@drawable/camera"
            app:iconGravity="textTop"
            app:iconTint="@color/white"
            app:iconSize="40dp"
            android:layout_marginStart="8dp"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>