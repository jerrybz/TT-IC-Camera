<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 主要内容区域 -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread">

        <!-- 保存成功文字 -->
        <TextView
            android:id="@+id/success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存成功"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="40dp"
            android:gravity="center" />

        <!-- 缩略图容器 -->
        <FrameLayout
            android:layout_width="@dimen/thumbnail_size"
            android:layout_height="@dimen/thumbnail_size"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_image_tile"
            android:padding="12dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/thumbnail_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="点击查看大图" />

        </FrameLayout>

        <!-- 提示文字 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击图片查看大图"
            android:textSize="@dimen/subtitle_text_size"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 分享区域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- "分享至:" 文字 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享至:"
                android:textSize="@dimen/subtitle_text_size"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <!-- 抖音图标按钮 -->
            <ImageButton
                android:id="@+id/tiktok_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_tiktok"
                android:background="@drawable/bg_tiktok_button"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:contentDescription="分享至抖音" />

        </LinearLayout>

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="返回"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="?android:attr/textColorPrimary"
            android:background="@drawable/btn_gradient_left"
            app:backgroundTint="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
