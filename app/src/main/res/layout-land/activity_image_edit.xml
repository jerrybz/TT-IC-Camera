<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 编辑容器 - 横屏时占据主要空间 -->
    <FrameLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/options_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 可缩放的图片视图 -->
        <com.tiktok.ic.camera.widget.ZoomableImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix" />

        <!-- 裁剪覆盖层 -->
        <com.tiktok.ic.camera.widget.CropOverlayView
            android:id="@+id/crop_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <!-- 功能选项面板（二级功能的子选项） - 横屏时在底部 -->
    <HorizontalScrollView
        android:id="@+id/options_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@id/secondary_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="false" />
    </HorizontalScrollView>

    <!-- 一级功能栏 - 横屏时在底部 -->
    <LinearLayout
        android:id="@+id/primary_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编辑"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#333333"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 二级功能栏 - 横屏时在底部，一级工具栏上方 -->
    <LinearLayout
        android:id="@+id/secondary_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/primary_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:backgroundTint="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <Button
                android:id="@+id/btn_crop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="裁剪"
                android:textColor="#666666"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btn_rotate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="旋转"
                android:textColor="#666666"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btn_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="文字"
                android:textColor="#666666"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btn_adjust"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="调节"
                android:textColor="#666666"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btn_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="滤镜"
                android:textColor="#666666"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#333333"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btn_sticker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="贴纸"
                android:textColor="#666666"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:backgroundTint="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
