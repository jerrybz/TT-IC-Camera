<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0D16">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_gallery_panel"
        android:padding="@dimen/padding_small">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择图片"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selected_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选择 0/4"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#FF7A18"
            android:background="@android:color/transparent"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 图片网格视图 - 横屏时使用5列 -->
    <GridView
        android:id="@+id/image_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="5"
        android:verticalSpacing="@dimen/margin_small"
        android:horizontalSpacing="@dimen/margin_small"
        android:stretchMode="columnWidth"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:padding="@dimen/padding_small"
        android:background="@android:color/transparent" />

    <!-- 空状态提示 -->
    <TextView
        android:id="@+id/empty_state_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="正在加载..."
        android:textSize="16sp"
        android:textColor="#80FFFFFF"
        android:visibility="gone" />

</LinearLayout>
